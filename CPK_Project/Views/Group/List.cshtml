            $("#spanTitle").text(data.node.text);
            $("#selGroupSpan").text(data.node.text);
            $("#selGroup").val(data.node.id);
            //console.info("#selGroup: " + $("#selGroup").val());
            $("#selGroupRemoveSpan").text(data.node.text);
            $("#selGroupRemove").val(data.node.id);

