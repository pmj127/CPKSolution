<!--sample is in group list -->
<!-- report list for selecting -->
<div class="modal fade" id="ReportsModal" tabindex="-1" role="dialog" aria-labelledby="ReportListLabel" style="padding-top: 5%;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="btnReportCloseTopModal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="ReportListLabel">Select Reports</h4>
            </div>
            <div class="modal-body">
                <div id="ReportList">
                    <div>
                        <table class="table table-striped table-bordered table-condensed table-hover">
                            <thead>
                                <tr>
                                    <th data-input-type="checkbox" data-input-value="ReportID" ></th>
                                    <th data-column="ReportID" data-sort="true" data-align="center">User ID</th>
                                    <th data-column="ReportName" data-sort="true" data-search="true">User Name</th>
                                    <th data-column="ReportPath">Report Path</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnReportSelectModal">select</button>
                <button type="button" class="btn btn-info" id="btnReportCloseModal" data-dismiss="modal">Close</button>    
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
 
    $("#btnReportsModal").on("click", function () {
        if ($("#ReportListModal").length == 0)
        {
            $("#ReportList").moonGrid({
                pageNo: 1,
                pageSize: 10,
                filterText: "Active",
                url: "/ReportView/GetList",
                sync: true,
                showPager: true,
                showSort: true,
                showSearcher: true,
                showModal: true
            });
            var fnselect = $(this).data('fnselect');
            var fnclose = $(this).data('fnclose');
            if (fnselect.length > 0)
                $("#btnReportSelectModal").on("click", { id: "ReportList" }, eval(fnselect));
            if (fnclose.length > 0)
            $("#btnReportCloseModal, #btnReportCloseTopModal").on("click", eval(fnclose));

        }
    });


</script>
