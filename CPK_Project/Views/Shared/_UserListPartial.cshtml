<!--sample is in group list -->
<!-- user list for selecting -->
<div class="modal fade" id="UsersModal" tabindex="-1" role="dialog" aria-labelledby="UsertListLabel" style="padding-top: 5%;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="btnUserCloseTopModal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="UserListLabel">Select Users</h4>
            </div>
            <div class="modal-body">
                <div id="UserList">
                    <div>
                        <table class="table table-striped table-bordered table-condensed table-hover">
                            <thead>
                                <tr>
                                    <th data-input-type="checkbox" data-input-value="UserID"></th>
                                    <th data-column="UserID" data-sort="true" data-align="center">User ID</th>
                                    <th data-column="FullName" data-sort="true" data-search="true">User Name</th>
                                    <th data-column="Account">Account</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnUserSelectModal">select</button>
                <button type="button" class="btn btn-info" id="btnUserCloseModal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $("#btnUsersModal").on("click", function () {
        if ($("#UserListModal").length == 0)
        {
            $("#UserList").moonGrid({
                pageNo: 1,
                pageSize: 10,
                filterText: "Active",
                url: "/Account/GetList",
                sync: true,
                showPager: true,
                showSort: true,
                showSearcher: true,
                showModal: true
            });
            var fnselect = $(this).data('fnselect');
            var fnclose = $(this).data('fnclose');
            
            if (fnselect.length > 0)
                $("#btnUserSelectModal").on("click",  {id: "UserList" }, eval(fnselect));
            if (fnclose.length > 0)
                $("#btnUserCloseModal, #btnUserCloseTopModal").on("click", eval(fnclose));

        }
    });


</script>
